{% extends 'base.html.twig' %}

{% block title %}Capsule Memories - Mon compte{% endblock %}

{# Bloc pour acceuillir la feuille de style CSS #}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
<link rel="stylesheet" href="./public/css/general.css">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>





<div class="example-wrapper">
{#  
{{ form(form)}} #}

{# Informations "Mon compte" + possibilité de les modifier  #}
{{ form_start(form) }}
    <div class="form-group">
        <label> NOM </label>
        {{ form_widget(form.lastname) }}
        
    </div>

    <div class="form-group">
        <label> Prénom </label>
        {{ form_widget(form.firstname) }}
       
    </div>

    <div class="form-group">
        <label> Date de naissance </label>
        {{ form_widget(form.birthdate) }}
       
    </div>

    <div class="form-group">
        <label> Ville de naissance </label>
        {{ form_widget(form.birth_city) }}
       
    </div>

    <div class="form-group">
        <label> Numéro de téléphone </label>
        {{ form_widget(form.phone_number) }}
       
    </div>

    <div class="form-group">
        <label> Email </label>
        {{ form_widget(form.email) }}
       
    </div>

    <div class="form-group">
        <label> Type d'utilisateur </label>
        {{ form_widget(form.user_type) }}  
    </div>
   
    {# S'occupe des champs qui ont été oubliés  #}
    {# Le render rest false empèche d'afficher les champs manquants  #}
{{ form_end(form, {'render_rest': false})  }}

<button class="btn">{{ button_label|default('Save') }}</button>

</div>


<section>
    <h2>Gestion de mes destinataires</h2>
    <div id="compte-destinataires-root"></div>
</section>


<section>
    <h2>Gestion de mes capsules</h2>
    <div id="compte-capsules-root"></div>
</section>

{% endblock %}


