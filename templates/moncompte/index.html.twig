{% extends 'base.html.twig' %}

{% block title %}Hello MoncompteController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{# Création du bouton de déconnection #}
<button class="btn"><a href="{{ path('app_logout') }}">Logout</a></button>



<div class="example-wrapper">
{#  
{{ form(form)}} #}

{# Informations "Mon compte" + possibilité de les modifier  #}
{{ form_start(form) }}
    <div class="form-group">
        <label> NOM </label>
        {{ form_widget(form.lastname) }}
        
    </div>

    <div class="form-group">
        <label> Prénom </label>
        {{ form_widget(form.firstname) }}
       
    </div>

    <div class="form-group">
        <label> Date de naissance </label>
        {{ form_widget(form.birthdate) }}
       
    </div>

    <div class="form-group">
        <label> Ville de naissance </label>
        {{ form_widget(form.birth_city) }}
       
    </div>

    <div class="form-group">
        <label> Numéro de téléphone </label>
        {{ form_widget(form.phone_number) }}
       
    </div>

    <div class="form-group">
        <label> Email </label>
        {{ form_widget(form.email) }}
       
    </div>

    <div class="form-group">
        <label> Type d'utilisateur </label>
        {{ form_widget(form.user_type) }}  
    </div>
   
    {# S'occupe des champs qui ont été oubliés  #}
    {# Le render rest false empèche d'afficher les champs manquants  #}
{{ form_end(form, {'render_rest': false})  }}

<button class="btn">{{ button_label|default('Save') }}</button>

</div>
{% endblock %}


