{% extends 'base.html.twig' %}

{% block title %}Infinity - Connexion{% endblock %}

{# Bloc pour acceuillir la feuille de style CSS #}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
<link rel="stylesheet" href="../../css/pageconnexion.css">
{% endblock %}

{% block body %}

    <main class="bg-light-darker">

        <div class="row">
            
            <div class="col-6">
                <div>
                    <img src="../../img/authentification/authentification.jpg" alt="connexion">
                </div>
            </div>

            <div class="col-4 offset-1">
                <div class="card ">
                    <div class="card-body">
                        <h4 class="card-title">DÉJA INSCRIT ?</h4>
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div class="form-group">
                                <label for="inputEmail">Votre adresse e-mail</label>
                                <input type="email" class="form-control" name="email" id="inputEmail" value="{{ last_username }}" autocomplete="email" required autofocus placeholder="Votre email">
                            </div>
                            <div class="form-group">
                                <label for="inputPassword">Votre mot de passe</label>
                                <input type="password" class="form-control" name="password" id="inputPassword" autocomplete="current-password" required placeholder="Votre mot de passe">
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <p class="text-end">Mot de passe oublié ?</p>
                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html
                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            #}

                            <div class="mt-5 text-center">
                                <button type="submit" class="btn btn-warning">SE CONNECTER</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
      <!-- FIN PAGE DE CONNEXION -->

    </main>


{% endblock %}
